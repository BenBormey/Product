@model WebApplication1.Models.TeamIndexVM
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Team";
}

<div class="panel">
    <!-- Toolbar -->
    <div class="d-flex align-items-center gap-2 mb-3">
        <h2 class="m-0">Team</h2>

        <form method="get" class="ms-auto d-flex align-items-center gap-2">
            <select asp-for="Role" asp-items="Model.RoleOptions" class="form-select form-select-sm w-auto">
                <option value="">All roles</option>
            </select>
            <input name="q" value="@Model.Q" class="form-control form-control-sm w-auto"
                   placeholder="Search name / email / phone" />
            <button class="btn btn-sm btn-outline-secondary"><i class="bi bi-search"></i></button>
            <a asp-action="Index" class="btn btn-sm btn-link">Reset</a>
        </form>
    </div>

    @if (!Model.Items.Any())
    {
        <div class="empty">
            <div class="empty-icon">👥</div>
            <div class="empty-title">No users found</div>
            <div class="empty-sub">Try a different search or role.</div>
        </div>
    }
    else
    {
        <div class="card bg-transparent border-0 shadow-none">
            <table class="table table-dark table-hover align-middle mb-0 team-table">
                <thead>
                    <tr class="text-secondary">
                        <th style="width:36%">Member</th>
                        <th style="width:18%">Role</th>
                        <th style="width:16%">Phone</th>
                        <th style="width:20%">Email</th>
                        <th style="width:10%">Joined</th>
                        <th class="text-end" style="width:8%"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var m in Model.Items)
                    {
                        var initials = string.Join("", (m.FullName ?? "").Split(' ', StringSplitOptions.RemoveEmptyEntries)
                        .Take(2).Select(s => char.ToUpperInvariant(s[0])));
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="avatar-sm">@initials</div>
                                    <div class="ms-2">
                                        <div class="fw-semibold">@m.FullName</div>
                                        @if (!string.IsNullOrWhiteSpace(m.Role))
                                        {
                                            <div class="small text-secondary">@m.Role</div>
                                        }
                                    </div>
                                </div>
                            </td>

                            <td>
                                <input form="f-@m.Id" name="role" value="@m.Role"
                                       class="form-control form-control-sm" placeholder="Role" />
                            </td>

                            <td>
                                <input form="f-@m.Id" name="phone" value="@m.Phone"
                                       class="form-control form-control-sm" placeholder="Phone" />
                            </td>

                            <td class="text-truncate" style="max-width:260px">@m.Email</td>

                            <td>@m.JoinedAt?.ToString("yyyy-MM-dd")</td>

                            <td class="text-end">
                                <form id="f-@m.Id" asp-action="Update" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@m.Id" />
                                    <button class="btn btn-sm btn-primary">Save</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
@section Styles {
    <style>
        /* Team page styles */
        .team-table tbody tr + tr {
            border-top-color: #2b3342;
        }

        .team-table td, .team-table th {
            vertical-align: middle;
        }

        .avatar-sm {
            width: 34px;
            height: 34px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            background: #2b3342;
            color: #e5e7eb;
            font-weight: 700;
            letter-spacing: .5px;
        }

        .empty {
            text-align: center;
            padding: 48px 12px;
            border: 1px dashed #2a2f39;
            border-radius: 14px;
            background: rgba(255,255,255,.02);
        }

        .empty-title {
            font-weight: 700;
            margin-top: 6px;
        }

        .empty-sub {
            color: #9aa3af;
        }

        .team-table input.form-control-sm {
            min-width: 140px;
        }
    </style>
}
