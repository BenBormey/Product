@model WebApplication1.Controllers.CashVm
@{
    ViewData["Title"] = "Cash on Delivery";
}

<div class="container mt-5 text-center">
    <h2>Cash on Delivery</h2>
    <p>Order # <strong>@Model.OrderId</strong></p>
    <p>Total: @Model.Total.ToString("C")</p>

    @* TempData alerts *@
    @if (TempData["error"] is string err)
    {
        <div class="alert alert-danger alert-dismissible fade show mx-auto" style="max-width:720px" role="alert">
            @err
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ok"] is string ok)
    {
        <div class="alert alert-success alert-dismissible fade show mx-auto" style="max-width:720px" role="alert">
            @ok
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card bg-dark text-white shadow p-4 mx-auto" style="max-width:720px">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

        <form asp-action="ConfirmCashOnDelivery" asp-route-orderId="@Model.OrderId" method="post" class="mt-2">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="OrderId" />

            <div class="form-group text-start mb-3">
                <label asp-for="CashAmount" class="form-label">Enter Cash Amount:</label>
                <input asp-for="CashAmount" type="number" step="0.01" min="0"
                       class="form-control" placeholder="Enter cash you will pay" />
                <span asp-validation-for="CashAmount" class="text-danger"></span>

                <div class="form-text">Total to pay: @Model.Total.ToString("C")</div>
            </div>

            <button type="submit" class="btn btn-primary">Confirm Cash on Delivery</button>
        </form>
    </div>

    <div class="mt-3">
        <a asp-action="Choose" asp-route-orderId="@Model.OrderId" class="btn btn-outline-secondary btn-sm">Back</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
