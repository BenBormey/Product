@*
  Views/Shared/_Layout.cshtml
*@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplication1</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />

    <!-- Bootstrap Icons (optional) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+Khmer:wght@400;600&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: "Noto Sans Khmer", system-ui, -apple-system, "Segoe UI", Roboto, Arial, sans-serif;
        }
    </style>
    @await RenderSectionAsync("Styles", required: false)   <!-- add this -->

</head>
<body class="dash-body">
    <div class="dash-wrapper">
        <!-- Sidebar -->
        <aside class="dash-sidebar">
            <div class="brand px-3 py-3">
                <span class="brand-dot"></span>
                <span class="brand-text">Foodie Kitchen</span>
            </div>

            <nav class="nav flex-column sidebar-nav">
                <a asp-controller="Dashboard" asp-action="Index" class="nav-link active">
                    <i class="bi bi-grid"></i> <span>Dashboard</span>
                </a>
                <a asp-controller="Menu" asp-action="Index" class="nav-link">
                    <i class="bi bi-bag"></i> <span>Menu</span>
                </a>

                <a asp-controller="Cart" asp-action="Index" class="nav-link">
                    <i class="bi bi-bag"></i> <span>Order list</span>
                </a>
                <a asp-controller="Analytics" asp-action="Index" class="nav-link">
                    <i class="bi bi-graph-up"></i> <span>Analytics</span>
                </a>
                <a asp-controller="Teams" asp-action="Index" class="nav-link">
                    <i class="bi bi-people"></i> <span>Teams</span>
                </a>
                <a asp-controller="Messages" asp-action="Index" class="nav-link">
                    <i class="bi bi-chat-dots"></i> <span>Message</span>
                </a>
                <a asp-controller="Settings" asp-action="Index" class="nav-link">
                    <i class="bi bi-gear"></i> <span>Settings</span>
                </a>

                <div class="mt-auto"></div>

                <form asp-controller="Account" asp-action="Login" method="post" class="d-inline">
                    <button class="btn btn-sm btn-outline-light">Log out</button>
                </form>

            </nav>
        </aside>

        <!-- Main -->
        <div class="dash-main">
            <!-- Top bar -->
            <header class="dash-topbar" asp-controller="Teams" asp-action="Index">
                <div class="welcome">
                    <span>Welcome, Ben Bormey 👋</span>
                </div>
                <div class="search-wrap">
                    <i class="bi bi-search"></i>
                    <input class="search-input" placeholder="Search" />
                </div>
                <div class="profile">
                    <form asp-controller="Teams" asp-action="Index" method="post" class="d-inline">
                        <button class="btn btn-sm btn-outline-light">

                    <img src="https://i.pravatar.cc/40?img=12" alt="avatar" />
                    </button>
                    </form>
                    <div class="profile-info">
                        <div class="name">Ben Bormey</div>
                        <div class="role">Admin</div>
                    </div>
    
                   
                </div>
            </header>

            <main class="dash-content">
                @RenderBody()
            </main>

            <footer class="dash-footer">
                <span>&copy; @DateTime.UtcNow.Year - WebApplication1</span>
            </footer>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Chart.js for charts -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
