@* Views/Shared/_Layout.cshtml *@
@using System.Security.Claims
@using WebApplication1
@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResource> T
@{
    var lang = System.Globalization.CultureInfo.CurrentUICulture.Name; // "en-US" | "km-KH"
    var userName = User?.Identity?.Name ?? "Admin";
    var roles = User?.Claims?.Where(c => c.Type == ClaimTypes.Role).Select(c => c.Value).ToList() ?? new List<string>();
    bool isKh = lang.StartsWith("km", StringComparison.OrdinalIgnoreCase);
    string flag = isKh ? "🇰🇭" : "🇺🇸";
    string label = isKh ? "ខ្មែរ" : "English";
    var returnUrl = (Context.Request.Path + Context.Request.QueryString).ToString();

    // ============ ACTIVE NAV LOGIC ============
    var curController = ViewContext.RouteData.Values["controller"]?.ToString() ?? "";
    var curAction = ViewContext.RouteData.Values["action"]?.ToString() ?? "";

    Func<string, string?, string> Active = (controller, action) =>
    {
        bool ctrlOk = string.Equals(curController, controller, StringComparison.OrdinalIgnoreCase);
        bool actOk = string.IsNullOrEmpty(action) || string.Equals(curAction, action, StringComparison.OrdinalIgnoreCase);
        return (ctrlOk && actOk) ? "active" : "";
    };

    Func<string[], string?, string> ActiveAny = (controllers, action) =>
    {
        bool ctrlOk = controllers.Any(c => string.Equals(curController, c, StringComparison.OrdinalIgnoreCase));
        bool actOk = string.IsNullOrEmpty(action) || string.Equals(curAction, action, StringComparison.OrdinalIgnoreCase);
        return (ctrlOk && actOk) ? "active" : "";
    };
}

<!DOCTYPE html>
<html lang="@lang">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @T["FooterAppName"]</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+Khmer:wght@400;600&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: "Noto Sans Khmer", system-ui, -apple-system, "Segoe UI", Roboto, Arial, sans-serif;
        }

        .lang-select, .dropdown-toggle {
            border-radius: 8px;
        }

        /* Highlight active menu */
        .sidebar-nav .nav-link.active {
            background: rgba(255,255,255,.12);
            color: #fff;
            border-radius: 10px;
            font-weight: 600;
        }

        /* Sidebar toggle animation */
        .dash-sidebar {
            width: 260px;
            transition: transform .3s ease-in-out;
        }
            /* collapsed state (mobile & optional desktop) */
            .dash-sidebar.collapsed {
                transform: translateX(-100%);
            }

        /* Layout frame */
        .dash-wrapper {
            display: flex;
            min-height: 100vh;
        }

        .dash-main {
            flex: 1;
            display: flex;
            flex-direction: column;
        }

        .dash-topbar {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: .75rem 1rem;
            border-bottom: 1px solid rgba(255,255,255,.08);
        }

        .dash-content {
            padding: 1rem;
        }

        .profile {
            display: flex;
            align-items: center;
            gap: .75rem;
        }

            .profile img {
                width: 36px;
                height: 36px;
                border-radius: 50%;
                object-fit: cover;
            }

        /* Search */
        .search-wrap {
            display: flex;
            align-items: center;
            gap: .5rem;
            background: rgba(255,255,255,.08);
            padding: .25rem .5rem;
            border-radius: 8px;
        }

        .search-input {
            background: transparent;
            border: none;
            color: #fff;
            outline: none;
            width: 220px;
        }

        /* Responsive: hide sidebar by default on small screens */
        @@media (max-width: 991.98px) {
            .dash-sidebar

        {
            position: fixed;
            top: 0;
            bottom: 0;
            z-index: 1040;
        }

        body:not(.sidebar-open) .dash-sidebar {
            transform: translateX(-100%);
        }

        body.sidebar-open .dash-sidebar {
            transform: translateX(0);
        }

        }
    </style>

    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="dash-body">
    <div class="dash-wrapper">
        <!-- Sidebar -->
        <aside class="dash-sidebar">
            <div class="brand px-3 py-3 d-flex align-items-center gap-2">
                <span class="brand-dot"></span>
                <span class="brand-text">@T["BrandName"]</span>
            </div>

            <nav class="nav flex-column sidebar-nav px-2">
                <a asp-controller="Dashboard" asp-action="Index" class="nav-link @Active("Dashboard","Index")">
                    <i class="bi bi-grid"></i> <span>@T["Dashboard"]</span>
                </a>
                <a asp-controller="Menu" asp-action="Index" class="nav-link @ActiveAny(new[]{ "Menu","Product" }, null)">
                    <i class="bi bi-bag"></i> <span>@T["Menu"]</span>
                </a>
                <a asp-controller="Cart" asp-action="Index" class="nav-link @Active("Cart","Index")">
                    <i class="bi bi-list-ul"></i> <span>@T["Orders"]</span>
                </a>

                <!-- New (third) menu -->
                <a asp-controller="Report" asp-action="Index" class="nav-link @Active("Reports","Index")">
                    <i class="bi bi-bar-chart-line"></i> <span>@T["Reports"]</span>
                </a>

                <a asp-controller="Cart" asp-action="Pedding" class="nav-link @Active("Cart","Pedding")">
                    <i class="bi bi-hourglass-split"></i> <span>@T["Pending"]</span>
                </a>
                <a asp-controller="Teams" asp-action="Index" class="nav-link @Active("Teams","Index")">
                    <i class="bi bi-people"></i> <span>@T["Teams"]</span>
                </a>
                <a asp-controller="Promotion" asp-action="Index" class="nav-link @Active("Promotion","Index")">
                    <i class="bi bi-ticket-perforated-fill"></i> 
                    <span>@T["Promotion"]</span>
                </a>
                <a asp-controller="Teams" asp-action="Index" class="nav-link @Active("Purchases","Index")">
                    <i class="bi bi-wallet2"></i>
                    <span>@T["Purchases"]</span>
                </a>
                <a asp-controller="Teams" asp-action="Index" class="nav-link @Active("Expenses","Index")">
                    <i class="bi bi-ticket-perforated-fill"></i>
                    <span>@T["Expenses"]</span>
                </a>
                <a asp-controller="Messages" asp-action="Index" class="nav-link @Active("Messages","Index")">
                    <i class="bi bi-chat-dots"></i> <span>@T["Message"]</span>
                </a>
                <div class="mt-auto"></div>
            </nav>
        </aside>

        <!-- Main -->
        <div class="dash-main">
            <!-- Top bar -->
            <header class="dash-topbar">
                <!-- Hamburger toggle (always visible on mobile, optional on desktop) -->
                <button class="btn btn-outline-light d-lg-none" id="sidebarToggle"
                        type="button" aria-label="Toggle sidebar" aria-controls="sidebar"
                        aria-expanded="false">
                    <i class="bi bi-list"></i>
                </button>

                <div class="welcome flex-grow-1">
                    <span>@T["WelcomeName", userName]</span>
                </div>

                <div class="search-wrap d-none d-md-flex">
                    <i class="bi bi-search"></i>
                    <input class="search-input" />
                </div>

                <!-- Language dropdown -->
                <div class="dropdown">
                    <button class="btn btn-sm btn-outline-light dropdown-toggle d-flex align-items-center"
                            data-bs-toggle="dropdown" aria-expanded="false">
                        <span class="me-1">@flag</span><span>@label</span>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li>
                            <a class="dropdown-item d-flex align-items-center"
                               href="@Url.Action("SetGet", "Lang", new { culture = "en-US", returnUrl })">
                                <span class="me-2">🇺🇸</span> English
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item d-flex align-items-center"
                               href="@Url.Action("SetGet", "Lang", new { culture = "km-KH", returnUrl })">
                                <span class="me-2">🇰🇭</span> ខ្មែរ
                            </a>
                        </li>
                    </ul>
                </div>

                <div class="profile">
                    <img src="~/uploads/products/photo_2025-07-21_16-07-44.jpg" alt="avatar" />
                    <div class="profile-info">
                        <div class="name">@userName</div>
                        <div class="role">@T["Admin"]</div>
                    </div>
                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline ps-2">
                        <button class="btn btn-sm btn-outline-light">@T["LogOut"]</button>
                    </form>
                </div>
            </header>

            <main class="dash-content">
                @RenderBody()
            </main>

            <footer class="dash-footer px-3 pb-3">
                <span>&copy; @DateTime.UtcNow.Year - @T["FooterAppName"]</span>
            </footer>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        // Sidebar toggle for mobile (adds/removes 'sidebar-open' on <body>)
        (function () {
            const btn = document.getElementById('sidebarToggle');
            if (!btn) return;
            btn.addEventListener('click', function () {
                const isOpen = document.body.classList.toggle('sidebar-open');
                btn.setAttribute('aria-expanded', isOpen ? 'true' : 'false');
            });
        })();
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
