@* Views/Shared/_Layout.cshtml *@
@using System.Security.Claims
@using WebApplication1
@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResource> T
@{
    var lang = System.Globalization.CultureInfo.CurrentUICulture.Name; // "en-US" | "km-KH"
    var userName = User?.Identity?.Name ?? "Admin";
    var roles = User?.Claims
        .Where(c => c.Type == ClaimTypes.Role)
        .Select(c => c.Value)
        .ToList() ?? new List<string>();
    bool isKh = lang.StartsWith("km", System.StringComparison.OrdinalIgnoreCase);
    string flag = isKh ? "🇰🇭" : "🇺🇸";
    string label = isKh ? "ខ្មែរ" : "English";
    var returnUrl = (Context.Request.Path + Context.Request.QueryString).ToString();
}

<!DOCTYPE html>
<html lang="@lang">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @T["FooterAppName"]</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+Khmer:wght@400;600&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: "Noto Sans Khmer", system-ui, -apple-system, "Segoe UI", Roboto, Arial, sans-serif;
        }

        .lang-select, .dropdown-toggle {
            border-radius: 8px;
        }
    </style>

    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="dash-body">
    <div class="dash-wrapper">
        <!-- Sidebar -->
        <aside class="dash-sidebar">
            <div class="brand px-3 py-3">
                <span class="brand-dot"></span>
                <span class="brand-text">@T["BrandName"]</span>
            </div>

            <nav class="nav flex-column sidebar-nav">
                <a asp-controller="Dashboard" asp-action="Index" class="nav-link active">
                    <i class="bi bi-grid"></i> <span>@T["Dashboard"]</span>
                </a>
                <a asp-controller="Menu" asp-action="Index" class="nav-link">
                    <i class="bi bi-bag"></i> <span>@T["Menu"]</span>
                </a>
                <a asp-controller="Cart" asp-action="Index" class="nav-link">
                    <i class="bi bi-bag"></i> <span>@T["OrderList"]</span>
                </a>
                <a asp-controller="Analytics" asp-action="Index" class="nav-link">
                    <i class="bi bi-graph-up"></i> <span>@T["Analytics"]</span>
                </a>
                <a asp-controller="Teams" asp-action="Index" class="nav-link">
                    <i class="bi bi-people"></i> <span>@T["Teams"]</span>
                </a>
                <a asp-controller="Messages" asp-action="Index" class="nav-link">
                    <i class="bi bi-chat-dots"></i> <span>@T["Message"]</span>
                </a>
              
                <div class="mt-auto"></div>

            
            </nav>

        </aside>
       
        <!-- Main -->
        <div class="dash-main">
            <!-- Top bar -->
            <header class="dash-topbar">
                <div class="welcome">
                    <span>@T["WelcomeName", userName] </span>
                </div>

                <div class="search-wrap">
                    <i class="bi bi-search"></i>
                    <input class="search-input" placeholder="@T["Search"]" />
                </div>

                <!-- FLAG LANGUAGE DROPDOWN (topbar) -->
                <div class="dropdown ms-3">
                    <button class="btn btn-sm btn-outline-light dropdown-toggle d-flex align-items-center"
                            data-bs-toggle="dropdown" aria-expanded="false">
                        <span class="me-1">@flag</span><span>@label</span>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li>
                            <a class="dropdown-item d-flex align-items-center"
                               href="@Url.Action("SetGet", "Lang", new { culture = "en-US", returnUrl })">
                                <span class="me-2">🇺🇸</span> English
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item d-flex align-items-center"
                               href="@Url.Action("SetGet", "Lang", new { culture = "km-KH", returnUrl })">
                                <span class="me-2">🇰🇭</span> ខ្មែរ
                            </a>
                        </li>
                    </ul>
                
                </div>

                <div class="profile ms-3">
                   
                        <img src="~/uploads/products/photo_2025-07-21_16-07-44.jpg" alt="avatar" />
                 
                    <div class="profile-info">
                        <div class="name">@userName</div>
                        <div class="role">@T["Admin"]</div>
                    </div>
                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline px-3 pb-3">
                        <button class="btn btn-sm btn-outline-light">@T["LogOut"]</button>
                    </form>
                </div>
            </header>

            <main class="dash-content">
                @RenderBody()
            </main>

            <footer class="dash-footer">
                <span>&copy; @DateTime.UtcNow.Year - @T["FooterAppName"]</span>
               
            </footer>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
