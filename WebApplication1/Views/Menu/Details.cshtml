@model WebApplication1.Entities.Product
@{
    ViewData["Title"] = "Product Details";
    var img = string.IsNullOrWhiteSpace(Model.Image) ? "/images/placeholder-food.jpg" : Model.Image;
}
<div class="detail-card">
    <!-- Hero image with price badge -->
    <div class="detail-hero">
        <img src="@img" alt="@Model.Name" />
        <span class="price-badge">$ @Model.Price.ToString("N2")</span>
    </div>

    <div class="detail-body">
        <h2 class="detail-title">@Model.Name</h2>

        @if (!string.IsNullOrWhiteSpace(Model.Description))
        {
            <p class="detail-desc">@Model.Description</p>
        }

        <div class="detail-meta">
            <div class="meta-item">
                <span class="meta-label">Code / Barcode</span>
                <span class="meta-value">@(!string.IsNullOrWhiteSpace(Model.CodeOrBarcode) ? Model.CodeOrBarcode : "N/A")</span>
            </div>
            <div class="meta-item">
                <span class="meta-label">Category ID</span>
                <span class="meta-value">@Model.CategoryId</span>
            </div>
            <div class="meta-item">
                <span class="meta-label">Stock</span>
                <span class="meta-value">@Model.QtyInStock</span>
            </div>
            <div class="meta-item">
                <span class="meta-label">Created</span>
                <span class="meta-value">@Model.CreatedDate?.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</span>
            </div>
        </div>

        <div class="detail-actions">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
            <a asp-action="Index" class="btn btn-outline-secondary">Back</a>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        /* Card wrapper */
        .detail-card {
            background: var(--panel,#1a1d24);
            border-radius: 18px;
            overflow: hidden;
            box-shadow: 0 8px 24px rgba(0,0,0,.35);
            max-width: 980px;
            margin: 0 auto;
        }

        /* Hero image */
        .detail-hero {
            position: relative;
            aspect-ratio: 16 / 9;
            background: #0f1115;
        }

            .detail-hero img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                display: block;
                transition: transform .35s ease;
            }

            .detail-hero:hover img {
                transform: scale(1.02);
            }

        /* Price badge */
        .price-badge {
            position: absolute;
            left: 16px;
            bottom: 16px;
            background: #000000b0;
            color: #fff;
            font-weight: 700;
            padding: 6px 10px;
            border-radius: 12px;
            backdrop-filter: saturate(120%) blur(4px);
        }

        /* Body */
        .detail-body {
            padding: 18px 18px 20px;
        }

        .detail-title {
            margin: 0 0 6px;
            color: #eaecef;
            font-weight: 700;
        }

        .detail-desc {
            color: #b7bcc5;
            margin-bottom: 14px;
        }

        /* Meta grid */
        .detail-meta {
            display: grid;
            gap: 10px;
            grid-template-columns: repeat(3, minmax(0,1fr));
            background: #181c23;
            border-radius: 12px;
            padding: 12px;
            margin-bottom: 16px;
        }

        .meta-item {
            display: flex;
            flex-direction: column;
        }

        .meta-label {
            color: #8f97a3;
            font-size: 12px;
            text-transform: uppercase;
            letter-spacing: .4px;
        }

        .meta-value {
            color: #e2e6eb;
            font-weight: 600;
        }

        /* Actions */
        .detail-actions {
            display: flex;
            gap: .5rem;
        }
        @@media (max-width: 900px) {
            .detail-meta

        {
            grid-template-columns: 1fr 1fr;
        }

        }
        @@media (max-width: 600px) {
            .detail-meta

        {
            grid-template-columns: 1fr;
        }

        }
    </style>
}
