<table class="table table-dark table-striped table-hover align-middle cart-table">
    <thead>
        <tr>
            <th>Product</th>
            <th class="text-end">Price</th>
            <th class="text-end">Qty</th>
            <th class="text-end">Subtotal</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model.Items)
        {
            <tr>
                <td>
                    <div class="d-flex align-items-center gap-2">
                        <img src="@(string.IsNullOrWhiteSpace(i.Image) ? "/images/placeholder-food.jpg" : i.Image)"
                             width="48" height="48" style="object-fit:cover;border-radius:8px;" />
                        <span class="fw-semibold">@i.ProductName</span>
                    </div>
                </td>
                <td class="text-end text-num">$ @i.Price.ToString("N2")</td>
                <td class="text-end">
                    <form asp-action="ChangeQty" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@i.CartItemId" />
                        <input name="qty" type="number" min="1" value="@i.Quantity"
                               class="form-control form-control-sm qty-input d-inline" />
                        <button class="btn btn-sm btn-outline-secondary ms-1">Update</button>
                    </form>
                </td>
                <td class="text-end text-num">$ @i.SubTotal.ToString("N2")</td>
                <td class="text-end cart-actions">
                    <form asp-action="Remove" asp-route-id="@i.CartItemId" method="post">
                        @Html.AntiForgeryToken()
                        <button class="btn btn-sm btn-danger">Remove</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr class="cart-total-row">
            <th colspan="3" class="text-end">Total</th>
            <th class="text-end text-num">$ @Model.Total.ToString("N2")</th>
            <th></th>
        </tr>
    </tfoot>
</table>

<!-- ✅ Checkout button -->
<div class="d-flex justify-content-between mt-3">
    <form asp-action="Clear" method="post">
        @Html.AntiForgeryToken()
        <button class="btn btn-outline-danger">Clear Cart</button>
    </form>

    <a asp-controller="Checkout" asp-action="Index" class="btn btn-success px-4">
        <i class="bi bi-credit-card"></i> Checkout
    </a>
</div>
