@model WebApplication1.Models.Order.OrderDetailsVm
@{
    ViewData["Title"] = $"Order #{Model.Id}";
    string Badge(string s) => s switch
    {
        "PendingPayment" => "badge bg-warning",
        "Processing" => "badge bg-info",
        "Paid" => "badge bg-success",
        "Completed" => "badge bg-success",
        "Cancelled" => "badge bg-danger",
        "CashOnDelivery" => "badge bg-primary",
        _ => "badge bg-secondary"
    };
}

<div class="container mt-4">

    @if (TempData["ok"] is string ok)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @ok
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h3 class="m-0">Order #@Model.Id</h3>
            <div class="text-secondary">
                @Model.OrderDate?.ToLocalTime().ToString("dd MMM yyyy HH:mm")
            </div>
        </div>
        <span class="@Badge(Model.Status)">@Model.Status</span>
    </div>

    <div class="row g-3">
        <div class="col-lg-8">
            <div class="card bg-dark text-white shadow-sm">
                <div class="card-header fw-semibold">Items (@Model.ItemsCount)</div>
                <div class="card-body p-0">
                    <table class="table table-dark table-striped table-hover m-0 align-middle">
                        <thead>
                            <tr>
                                <th style="width:72px;"></th>
                                <th>Product</th>
                                <th class="text-end">Unit</th>
                                <th class="text-end">Qty</th>
                                <th class="text-end">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var i in Model.Items)
                            {
                                <tr>
                                    <td>
                                        <img src="@(string.IsNullOrWhiteSpace(i.ImageUrl) ? $"https://picsum.photos/seed/{i.ProductId}/100/100" : i.ImageUrl)"
                                             class="rounded" style="width:56px;height:56px;object-fit:cover" />
                                    </td>
                                    <td>@i.Name</td>
                                    <td class="text-end">$ @i.UnitPrice.ToString("N2")</td>
                                    <td class="text-end">@i.Qty</td>
                                    <td class="text-end">$ @i.LineTotal.ToString("N2")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card bg-dark text-white shadow-sm">
                <div class="card-header fw-semibold">Summary</div>
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <span>Subtotal</span>
                        <span>$ @Model.Subtotal.ToString("N2")</span>
                    </div>
                    <div class="d-flex justify-content-between text-secondary">
                        <span>Adjustments</span>
                        <span>$ @Model.Adjustments.ToString("N2")</span>
                    </div>
                    <hr />
                    <div class="d-flex justify-content-between fw-semibold fs-5">
                        <span>Total</span>
                        <span>$ @Model.TotalPrice.ToString("N2")</span>
                    </div>
                </div>
            </div>

            <div class="d-flex gap-2 mt-3">
                <a asp-action="Index" class="btn btn-outline-secondary w-50">Back</a>
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-info w-50">Refresh</a>
            </div>
        </div>
    </div>
</div>
